{
    "python.formatting.provider": "yapf",
    "python.linting.flake8Enabled": true,
    "python.linting.ignorePatterns": [
    ".vscode/*.py",
    "**/site-packages/**/*.py",
    "**/migrations/**/*.py"
    ],
    "python.venvFolders": [
        "envs",
        ".pyenv",
        ".direnv",
        "venv"
    ],
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
        "venv": true
    }
}